    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              HorizontalAlignment="Center"
              Margin="5 5 5 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <RadioButton Grid.Column="0" IsChecked="True"
                         Style="{DynamicResource MaterialDesignTabRadioButton}"
                         Content="Sample text 1"
                         Margin="20 0 20 0"
                         x:Name="Sample1"
                         BorderBrush="{DynamicResource PrimaryHueDarkBrush}"/>
            <RadioButton Grid.Column="1" IsChecked="False"
                         Style="{DynamicResource MaterialDesignTabRadioButton}"
                         Content="Sample text 2"
                         Margin="20 0 20 0"
                         BorderBrush="{DynamicResource PrimaryHueDarkBrush}"
                         BorderThickness="5"
                         x:Name="Sample2"/>

        </Grid>

        <Grid Grid.Row="1" 
              Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=Sample1}">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      Background="#FF282A3E"
                      Margin="4 0 2 0"
                      >
                    <Label Content="Fedral skill worker point gide"
                           Foreground="White"
                           Padding="10 0 0 0"
                           VerticalContentAlignment="Center"
                           x:Name="Column1"/>
                </Grid>
                <Grid Grid.Column="1"
                      Background="#FF282A3E"
                      Margin="2 0 2 0">

                </Grid>
                <Grid Grid.Column="2"
                      Background="#FF282A3E"
                      Margin="2 0 4 0">
                    <Label Content="Point per factor"
                           Foreground="White"
                           Padding="10 0 0 0"
                           VerticalContentAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <ScrollViewer>
                    <StackPanel Name="QuizView"/>
                </ScrollViewer>
            </Grid>
            <Button Grid.Row="1" Content="Your Score" Style="{StaticResource MaterialDesignRaisedButton}" Width="100" VerticalAlignment="Bottom" Margin="0 0 0 10" x:Name="Score"/>
        </Grid>
        <Grid Grid.Row="1" 
              Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=Sample2}">

        </Grid>

        <Rectangle VerticalAlignment="Top" 
                   HorizontalAlignment= "Stretch" 
                   Height="1" Fill="Gray" 
                   />
        <Rectangle VerticalAlignment="top" 
                       HorizontalAlignment= "Stretch" 
                       Height="1" 
                       Margin="0 42 0 0" Fill="Gray"/>

    </Grid>
